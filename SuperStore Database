#1 Using a SELECT statement to order the items by price 
SELECT item_name,price
FROM superstore
ORDER BY price;

#2 SUM statistic for item price 
SELECT SUM(price),item_name
FROM superstore
GROUP BY item_name;

#3 MAX statistic for item price 
SELECT MAX(price),item_name
FROM superstore
GROUP BY item_name; 

#4 COUNT statistic for item price 
SELECT COUNT(price),item_name
FROM superstore
GROUP BY item_name; 

#5 MIN statistic for item price 
SELECT MIN(price),item_name 
FROM superstore
GROUP BY item_name; 

#6 AVG statistic for item price 
SELECT AVG(price), item_name
FROM superstore
GROUP BY item_name; 

#7 Calculating the AVG price for items in the category of Kitchen Supplies 
SELECT AVG(price), item_name
FROM superstore
WHERE category = 'Kitchen Supplies'
GROUP By item_name; 

#8 Calcuating how many air purifiers are in stock? 
SELECT stock_quantity,item_name
FROM superstore
WHERE stock_quantity>0 AND item_name='Air Purifier';
